<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="user.FirstActivity"
android:background="#fff"
    >

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:background="@drawable/parametre"
            android:popupBackground="#fff"
            android:spinnerMode="dropdown"

            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"

            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="56dp"/>
    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:layout_below="@+id/bar"
       android:background="@drawable/triangle"
        android:orientation="vertical">

        <Button
            android:id="@+id/chercher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_first"
            android:text="Cherchez un terrain"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
          android:layout_marginTop="150dp"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"

            />

        <Button
            android:id="@+id/reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_first"
            android:text="Mes rÃ©servations"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/chercher"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"

            />


    </RelativeLayout>
</RelativeLayout>